{% extends 'base.html.twig' %}

{% block title %} Список пользователей {% endblock %}

{% block content %}
    <form class="form-inline my-2 my-lg-0" action="{{ path('user_list') }}" method="GET">
        <input class="form-control mr-sm-2" type="search" aria-label="Search" name="name">
        <button class="btn btn-primary" type="submit">Поиск по имени</button>
    </form>
    <a href="{{ path('user_create') }}"><button type="button" class="btn btn-default my-2 my-sm-0">Создание пользователя</button></a>
    <table class="table table-striped table-hover">
        <tr>
            <th> № п/п </th>
            <th> Name </th>
            <th> Surname </th>
            <th> Age </th>
            <th> Email </th>
            <th> Password </th>
            <th> Actions </th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <p><a href="{{ path('user_show', {'id': user.id}) }}">Просмотр</a></p>
                    <p><a href="{{ path('user_update', {'id': user.id}) }}">Редактировать</a></p>
                    <p><a href="{{ path('user_delete', {'id': user.id}) }}">Удалить</a></p>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
