{% extends 'base.html.twig' %}

{% block title %} Создание книги {% endblock %}

{% block content %}
    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.pageQuantity) }}
        {{ form_row(form.authors, {'attr': {'class': 'select2'}}) }}
    {{ form_end(form) }}

    <a href="{{ path('book_list') }}">Назад</a>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}
