{% extends 'base.html.twig' %}

{% block title %} Список pupupupupusers {% endblock %}

{% block content %}
    <form class="form-inline my-2 my-lg-0" action="{{ path('pupupupupuser_list') }}" method="GET">
        <input class="form-control mr-sm-2" type="search" aria-label="Search" name="name">
        <button class="btn btn-default my-2 my-sm-0" type="submit">Поиск по имени</button>
    </form>
    <p><a href="{{ path('pupupupupuser_create') }}">Создание pupupupupuser</a></p>
    <table class="table table-striped table-hover">
        <tr>
            <th> № п/п </th>
            <th> Name </th>
            <th> Age </th>
            <th> Salary </th>
            <th> Actions </th>
        </tr>
        {% for pupupupupuser in pupupupupusers %}
        <tr>
            <td>{{ pupupupupuser.id }}</td>
            <td>{{ pupupupupuser.name }}</td>
            <td>{{ pupupupupuser.age }}</td>
            <td>{{ pupupupupuser.salary }}</td>
            <td><a href="{{ path('pupupupupuser_show', {'id': pupupupupuser.id}) }}">Просмотр</a></td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}